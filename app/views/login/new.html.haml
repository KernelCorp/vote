%div#login
  %h1
    = t 'participant.login.title'
  %div#fields
    = form_for @target, :method => 'put' do |f|
      %div.field
        = f.label :login
        = f.text_field :login
      %div.field
        = f.label :password
        = link_to t('participant.login.password.forget'), 'javascript:{}'
        = f.password_field :password, :placeholder => '+7(___)___-__-__'
  %div#links
    %div.button.yellow.link
      %a
        = t 'participant.login.button.text'
    %div.link
      = t 'participant.logup.welcome'
