<div class="block">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'user_sign_up', :id => 'form_sign_up' }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :id => 'email' %></div>

  <div><%= f.label :login %><br />
  <%= f.text_field :login, :autofocus => true, :id => 'login' %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :id => 'password' %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :id => 'password_confirmation' %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
