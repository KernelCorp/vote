- brand_image = 'http://lorempixel.com/200/70/cats'
- prize_image = 'http://lorempixel.com/220/265/cats'
- prize_text = 'Обворажительная кошечка'
- coincedence = (0..9).to_a.shuffle.first
#widget
  %div#brand
    = image_tag brand_image
  %div#prize
    = image_tag prize_image
    %p
      = prize_text
  %div#join
    = link_to t('widget.join'), 'javascript:{}'
  - if user_signed_in?
    %div#chances
      = raw "<p>#{t 'widget.coincedence'} <b>#{coincedence}</b> #{t 'widget.from'} 10</p>"
