%div#login
  %h1
    = t 'participant.login.title'
  = form_for @target, :url => session_path('participant'), :method => 'post', :html => { :name => 'participant_login' } do |f|
    %div#fields
      %div.field.left
        = f.label :login
        = f.text_field :login, :placeholder => '+7(___)___-__-__'
      %div.field.right
        = f.label :password
        = f.password_field :password
        = link_to t('participant.login.password.forget'), 'javascript:{}'
    %div#links
      %div.button.yellow.link.right
        = link_to t('participant.login.button.text'), 'javascript:document.forms["participant_login"].submit()'
        = f.submit 'You should not see this!', :class => 'hidden'
      %div.link.left
        = link_to t('participant.logup.welcome'), 'javascript:{}'
