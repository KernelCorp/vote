			%a#main_gery_rectangle_button Проверить
:javascript
	$("#main_grey_rectangle")
	.on('keydown', function(e){
		if( e.keyCode == 8 ){
			if( ! e.target.value.length ){
				$(e.target).prev('input').focus();
			}
		}
	})
	.on('keyup', function(e){
		if( e.target.value.length ){
			$(e.target).next('input').focus();
		}
	});