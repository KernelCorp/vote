- first_bonus = '100'
!!!
%html
  %head
    %title Vote
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #app
      #app_menu
        .app_div
          #app_menu_left
            = yield :top_menu_left
          #app_menu_language_switcher{ :class => I18n.locale }
            %a.elem.first Eng
            %a.elem.second Rus

          -if user_signed_in?
            .app_menu_right
              = link_to t(:logout), (current_user.is_a?(Participant) ?  destroy_participant_session_path : destroy_organization_session_path)
          -else
            #app_menu_right
              = yield :top_menu_right
      #app_yield
        #voting
          .standard_background
            #miniheader
            .app_div
              #bodyheader
                .first
                  %h1
                    = current_user.fullname
                  = link_to t('participant.poll.engaged'), 'javascript:{}', :class => 'twhite'
                .second
                  #balance
                    %p
                      = t 'participant.balance.yours'
                    %p
                      %b
                        = "#{current_user.billinfo} #{t 'participant.balance.currency'}"
                  = render 'layouts/settings', :close => @close_settings
                .third
                  .yellow.button
                    = link_to t('participant.balance.fillup'), new_payment_path, :class => 'tblack'
                  %p
                    = "#{t 'participant.bonus.first'} - #{first_bonus}%"
                .fullwidth{ :style => "display: #{ @close_settings ? 'none' : 'block' }" }
                  = render 'participants/settings', :who => current_user
              = yield
      #app_footer
        .app_div
          #app_footer_OOO
            = t('application_layout.footer.rights')
          #app_footer_development
            %a= t('application_layout.footer.development')
            \- Mangaweb
            %img( src="/images/logoM.png" )
    = yield :layout_bottom
