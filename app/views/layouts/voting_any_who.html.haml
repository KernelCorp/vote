%html
  %head
    %title Vote
    = javascript_include_tag "https://www.google.com/jsapi"
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #app
      #app_menu
        .app_div
          #app_menu_left
            = yield :top_menu_left
            - TextPage.all.each do |tp|
              = link_to tp.name, text_page_path(tp)

          -if user_signed_in?
            .app_menu_right
              = link_to t(:logout), (current_user.is_a?(Participant) ?  destroy_participant_session_path : destroy_organization_session_path)
          -else
            #app_menu_right
              = yield :top_menu_right
      #app_yield
        #voting
          .standard_background
            #miniheader
              = yield :logotip
            .app_div
              = yield
    #app_footer
      .app_div
        #app_footer_OOO
          = t('application_layout.footer.rights')
        #app_footer_development
          %a= t('application_layout.footer.development')
          \- Mangaweb
          %img( src="/images/logoM.png" )
    #app_fog

    = content_for :layout_bottom

