#body.create_voting
  .first.half
    = form_for @voting, as: 'voting',
      html: { class: 'default_form',
              name: 'create_monetary_poll',
              multipart: true,
              data:  { type: 'json' } },
      remote: true do |f|
      = f.hidden_field :type, :value => :monetary_voting if @voting.id.blank?

      = render "votings/new/common_part", :f => f, :active => 'first'

      %h3.tgreenoblue
        = t 'organization.poll.h3.finance'
      .row
        .elem.first.half
          = f.label :cost, :class => 'tgrey'
          = f.text_field :cost
        .elem.second.half
          = f.label :timer, :class => 'tgrey'
          = f.text_field :timer
      .row
        .elem.first.half
          = f.label :financial_threshold, :class => 'tgrey'
          = f.text_field :financial_threshold
        .elem.second.half
          = f.label :min_sum, :class => 'tgrey'
          = f.text_field :min_sum

      %h3.tgreenoblue
        = t 'organization.poll.h3.fixed'
      .row
        .elem.wide
          = label :voting_fake, :cost, t('organization.poll.calculation.cost'), :class => 'tgrey'
          = text_field :voting_fake, :cost, :class => 'ranged', :data => { :currency => t('organization.poll.currency.cost'), :fix => t('organization.poll.fixed.variant.cost'), :type => 'cost', :target => 'voting_cost', :min => 1, :max => 500, :step => 2 }
      .row
        .elem.wide
          = f.label :max_users_count, t('organization.poll.calculation.users_population'), :class => 'tgrey'
          = f.text_field :max_users_count, :class => 'ranged', :data => { :currency => t('organization.poll.currency.users_population'), :fix => t('organization.poll.fixed.variant.users_population'), :type => 'max_users_count', :min => 1, :max => 5000, :step => 50 }
      .row
        .elem.wide
          = f.label :budget, t('organization.poll.calculation.budget'), :class => 'tgrey'
          = f.text_field :budget, :class => 'ranged', :data => { :fix => t('organization.poll.fixed.variant.budget'), :currency => t('organization.poll.currency.budget'), :type => 'budget' , :min => 1, :max => 5000000, :step => 1000 }

      .row.last
        = link_to t('organization.poll.go_back_to_list'), organization_path, class: 'button', style: 'float: left'
        = f.submit t('organization.poll.save_and_check'), class: 'button'

  = render "votings/new/second_half"
