%div#bodyheader
  %div.first
    %h1
      = @who.fullname
    = link_to t('participant.poll.engaged'), 'javascript:{}', :class => 'tblack white'
  %div.second
    %div#balance
      %p
        = t 'participant.balance.yours'
      %p
        %b
          = "#{balance} #{t 'participant.balance.currency'}"
    %div#settings
      = link_to t('participant.settings.explain'), 'javascript:{}'
      %div.expander.more
        = link_to '&#8964;', 'javascript:{}'
  %div.third
    %div.yellow.button
      = link_to t('participant.balance.fillup'), 'javascript:{}'
    %div
      %p
        = "#{t 'participant.bonus.first'} - #{first_bonus}%"
%div#body
  %h1
    = @what.voting.name
  %div.left
    %div#slider
      %div.active{:data => { :'src-change' => 'http://lorempixel.com/125/80/cats' }}
        %img{:src => 'http://lorempixel.com/400/265/cats'}
      %div.passive{:data => { :'src-change' => 'http://lorempixel.com/400/265/cats' }}
