      = raw information
  %div#phone.right
    %div#lead_phone.yellow
      %p
        = t 'poll.lead_number'
      = raw ul_lead_phone
    %div#coincedence
      %p
        = raw "<b class='special star'>#{@what.voting.matches_count @what.phone}</b> #{t 'poll.coincedence.from'} <b class='special'>10</b> #{t 'poll.coincedence.in_your_number'}"
    %div#your_phone{:data => { :'voting-id' => @what.voting.id }}
      = raw ul_your_phone
      %div#number_info
        %div#arrow_up
        %div.loading_icon
