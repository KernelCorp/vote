.row.settings
  .col.two_thirds
    = form_for who, 
      url: '/participant', method: 'put',
      html: { class: 'form' } do |f|
      %h1 Настройки аккаунта
      %p Заполнив контактные данные вы можете получить стартовый бонус на ваш счет. Это поможет вам освоиться и получить преимущество.

      %h3 Личная информация
      .row
        .col= inp f, :secondname, :between => raw('*')
        .col 
          %h4 Возраст*
          .select#settings_participant_age_select
            = f.text_field :age, class: 'select_current select_input', readonly: true, data: { listok: 'false' }
            .select_list
              - (15..99).each do |i|
                %div{ data: { select: i } }= i
      .row
        .col= inp f, :firstname, :between => raw('*')
        .col
          %h4 Пол*
          .row{ style: 'line-height: 31px;' }
            = f.radio_button :gender, true, class: 'radiocheck'
            = f.label :gender, 'Мужской', value: true
            = f.radio_button :gender, false, class: 'radiocheck'
            = f.label :gender, 'Женский', value: false, style: 'margin-left: 30px;'

      %h3 Контактные данные
      .row
        .col= inp f, :email, :between => raw('*')
        .col= inp f, :city, :between => raw('*')
      .row
        .col= inp f, :phone, :between => raw('*')
      .row.row_with_button
        .col.small_notation
          %span *
          = t 'organization.logup.field_required'
        .col= f.submit 'Обновить данные'


    %h1 История пополнений
    %table#settings_participant_history_table
      %tr.row_with_names
        %td.date Дата
        %td.amount Сумма
        %td.status Статус операции
        %td.method Способ оплаты
      %tr
        %td.date Дата
        %td.amount Сумма
        %td.status Статус операции
        %td.method Способ оплаты
      %tr
        %td.date Дата
        %td.amount Сумма
        %td.status Статус операции
        %td.method Способ оплаты
      %tr
        %td.date Дата
        %td.amount Сумма
        %td.status Статус операции
        %td.method Способ оплаты


  .col.one_third
    #send_invitation_settings.settings_box
      =form_for who, url: "#", method: 'post', html: { class: 'form' } do |f|
        %h1 Позовите друзей
        %p Пригласите друзей и получите на свой счет 10% от суммы их первого пополнения.
        
        .row= inp f, :email
        .row.row_with_button= f.submit 'Отправить приглашение'
        .row
          .button.social_button.social_button_vk
          .button.social_button.social_button_f
          .button.social_button.social_button_t
          .button.social_button.social_button_g
          .button.social_button.social_button_od


    #phones_settings.settings_box
      =form_for who, url: "#", method: 'post', html: { class: 'form' } do |f|
        %h1 Ваши номера
        #settings_user_phones
          - current_user.phones.each do |phone|
            .settings_uset_phone= phone.number

        %h1 Добавить номер
        .row= inp f, :phone
        .row.row_with_button= f.submit 'Сохранить'


    #password_settings.settings_box
      =form_for who, url: "#", method: 'post', html: { class: 'form' } do |f|
        %h1 Изменить пароль
        .row= inp f, :old_password, :type => :password_field
        .row= inp f, :password, :type => :password_field
        .row= inp f, :password_confirmation, :type => :password_field
        .row.row_with_button= f.submit 'Сохранить'